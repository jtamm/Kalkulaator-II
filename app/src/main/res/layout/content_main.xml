<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.androidstudio.kalkulaator_ii.MainActivity"
    tools:showIn="@layout/activity_main">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.example.androidstudio.kalkulaator_ii.AutoResizeTextView
            android:id="@+id/calc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="100sp"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"
            android:gravity="end" />
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/calc_keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginTopPercent="11%"
            >

            <Button
                android:text="("
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginLeftPercent="0%"
                />

            <Button
                android:text=")"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginLeftPercent="25%"
                />
            <Button
                android:text="Back"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginLeftPercent="50%"
                android:id="@+id/button_back" />
            <Button
                android:text="C"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginLeftPercent="75%"
                android:id="@+id/button_reset" />
            <Button
                android:text="7"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="20%"
                app:layout_marginLeftPercent="0%"
                android:id="@+id/button_seven" />
            <Button
                android:text="8"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="20%"
                app:layout_marginLeftPercent="25%"
                android:id="@+id/button_eight" />
            <Button
                android:text="9"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="20%"
                app:layout_marginLeftPercent="50%"
                android:id="@+id/button_nine" />
            <Button
                android:text="/"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="20%"
                app:layout_marginLeftPercent="75%"
                android:id="@+id/button_divide" />
            <Button
                android:text="4"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="40%"
                app:layout_marginLeftPercent="0%"
                android:id="@+id/button_four" />
            <Button
                android:text="5"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="40%"
                app:layout_marginLeftPercent="25%"
                android:id="@+id/button_five" />
            <Button
                android:text="6"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="40%"
                app:layout_marginLeftPercent="50%"
                android:id="@+id/button_six" />
            <Button
                android:text="*"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="40%"
                app:layout_marginLeftPercent="75%"
                android:id="@+id/button_multiple" />
            <Button
                android:text="1"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="60%"
                app:layout_marginLeftPercent="0%"
                android:id="@+id/button_one" />
            <Button
                android:text="2"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="60%"
                app:layout_marginLeftPercent="25%"
                android:id="@+id/button_two" />
            <Button
                android:text="3"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="60%"
                app:layout_marginLeftPercent="50%"
                android:id="@+id/button_three" />
            <Button
                android:text="-"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="60%"
                app:layout_marginLeftPercent="75%"
                android:id="@+id/button_subtract" />
            <Button
                android:text="0"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="80%"
                app:layout_marginLeftPercent="0%"
                android:id="@+id/button_zero" />
            <Button
                android:text=","
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="80%"
                app:layout_marginLeftPercent="25%"
                android:id="@+id/button_comma" />
            <Button
                android:text="="
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="80%"
                app:layout_marginLeftPercent="50%"
                android:id="@+id/button_result" />
            <Button
                android:text="+"
                style="@style/button"
                android:onClick="calcButtonClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="19%"
                app:layout_widthPercent="24%"
                app:layout_marginTopPercent="80%"
                app:layout_marginLeftPercent="75%"
                android:id="@+id/button_add" />
        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>

</RelativeLayout>
